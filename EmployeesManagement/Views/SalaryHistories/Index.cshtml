@model IEnumerable<EmployeesManagement.Models.SalaryHistory>

@{
    ViewData["Title"] = "Salary History";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Salary History</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Salary History</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Salary Changes History</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>@Html.DisplayNameFor(model => model.OldSalary)</th>
                                    <th>@Html.DisplayNameFor(model => model.NewSalary)</th>
                                    <th>Change Amount</th>
                                    <th>Change %</th>
                                    <th>@Html.DisplayNameFor(model => model.EffectiveDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.Reason)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Employee.FullName)</td>
                                        <td>@item.OldSalary.ToString("C")</td>
                                        <td>@item.NewSalary.ToString("C")</td>
                                        <td>
                                            @if (item.ChangeAmount >= 0)
                                            {
                                                <span class="text-success">+@item.ChangeAmount.ToString("C")</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">@item.ChangeAmount.ToString("C")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.ChangePercentage >= 0)
                                            {
                                                <span class="badge badge-success">+@item.ChangePercentage.ToString("F2")%</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">@item.ChangePercentage.ToString("F2")%</span>
                                            }
                                        </td>
                                        <td>@item.EffectiveDate.ToString("dd/MM/yyyy")</td>
                                        <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
