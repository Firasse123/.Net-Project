@model EmployeesManagement.Models.JobOpening

@{
    ViewData["Title"] = "Edit Job Opening";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Job Opening</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Job Openings</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Edit Job Opening Information</h3>
                    </div>
                    <form asp-action="Edit">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="CreatedById" />
                            <input type="hidden" asp-for="CreatedOn" />
                            
                            <div class="form-group">
                                <label asp-for="JobTitle"></label>
                                <input asp-for="JobTitle" class="form-control" />
                                <span asp-validation-for="JobTitle" class="text-danger"></span>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Department"></label>
                                        <input asp-for="Department" class="form-control" />
                                        <span asp-validation-for="Department" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Location"></label>
                                        <input asp-for="Location" class="form-control" />
                                        <span asp-validation-for="Location" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Requirements"></label>
                                <textarea asp-for="Requirements" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Requirements" class="text-danger"></span>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="NumberOfPositions"></label>
                                        <input asp-for="NumberOfPositions" class="form-control" type="number" />
                                        <span asp-validation-for="NumberOfPositions" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="SalaryRangeMin"></label>
                                        <input asp-for="SalaryRangeMin" class="form-control" type="number" step="0.01" />
                                        <span asp-validation-for="SalaryRangeMin" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="SalaryRangeMax"></label>
                                        <input asp-for="SalaryRangeMax" class="form-control" type="number" step="0.01" />
                                        <span asp-validation-for="SalaryRangeMax" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ClosingDate"></label>
                                        <input asp-for="ClosingDate" class="form-control" type="date" />
                                        <span asp-validation-for="ClosingDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Status"></label>
                                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<EmployeesManagement.Models.JobStatus>()"></select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                            <button type="submit" class="btn btn-warning">Update</button>
                            <a asp-action="Index" class="btn btn-default">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
