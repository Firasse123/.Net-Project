@model EmployeesManagement.Models.BulkSalaryUpdateViewModel

@{
    ViewData["Title"] = "Bulk Salary Update";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Bulk Salary Update</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Update Salaries for Selected Employees</h3>
                    </div>
                    <form asp-action="BulkUpdate" method="post">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="text-danger">
                                @Html.ValidationSummary(true)
                            </div>

                            <div class="form-group">
                                <label>Employees</label>
                                <select class="form-control" name="EmployeeIds" multiple size="10" asp-items="ViewBag.EmployeeOptions"></select>
                                <small class="form-text text-muted">Hold Ctrl (Windows) to select multiple employees.</small>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Percentage Increase (%)</label>
                                        <input asp-for="PercentageIncrease" class="form-control" placeholder="e.g. 5" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Flat Increase</label>
                                        <input asp-for="FlatIncrease" class="form-control" placeholder="e.g. 250" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Effective Date</label>
                                        <input asp-for="EffectiveDate" type="date" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Reason</label>
                                        <input asp-for="Reason" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Apply Update
                            </button>
                            <a asp-action="Index" class="btn btn-default">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
