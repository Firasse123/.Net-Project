@model EmployeesManagement.Models.JobOpening

@{
    ViewData["Title"] = "Delete Job Opening";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Delete Job Opening</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Confirm Deletion</h3>
                    </div>
                    <div class="card-body">
                        <h5>Are you sure you want to delete this job opening?</h5>
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.JobTitle)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.JobTitle)</dd>
                            
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Department)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Department)</dd>
                            
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PostedDate)</dt>
                            <dd class="col-sm-8">@Model.PostedDate.ToString("dd/MM/yyyy")</dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-default">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
