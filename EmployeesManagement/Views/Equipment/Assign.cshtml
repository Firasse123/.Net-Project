@model EmployeesManagement.Models.EquipmentAssignViewModel

@{
    ViewData["Title"] = "Assign Equipment";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Assign Equipment</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@Model.EquipmentName</h3>
                    </div>
                    <form asp-action="Assign" method="post">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            @Html.HiddenFor(m => m.EquipmentId)
                            <div class="form-group">
                                <label>Employee</label>
                                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeOptions"></select>
                                @Html.ValidationMessageFor(m => m.EmployeeId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-check"></i> Assign
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.EquipmentId" class="btn btn-default">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
